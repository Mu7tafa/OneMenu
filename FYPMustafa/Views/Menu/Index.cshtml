@model IEnumerable<FYPMustafa.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/MenuCard.css" rel="stylesheet" />
<h2>Menus</h2>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<p>
    @Html.ActionLink("Create New", "Create","", new { @class = "btn btn-primary"})
</p>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card bg-light">
                <img class="card-img-top"  src='@Url.Action("Menu", "Images", new { id = item.ImagePath })' alt="Image 1">
                <div class="card-body">
                    <h5 class="card-title border-bottom pb-3">@item.Name</h5>
                    <p class="card-text">@item.Type</p>
                    <a href="#" class="btn btn-sm btn-info">View items <i class="fas fa-angle-double-right"></i></a>
                    <a href="#" class="btn btn-sm btn-danger float-right">Delete menu <i class="fas fa-remove"></i></a>
                </div>
            </div>
        </div>
    }
</div>

