@model FYPMustafa.Models.Menu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Restaurant.css" rel="stylesheet" />
<div class="container" style="padding-bottom:20px; padding-top:20px;">
    <h2>Menu</h2>


    @using (Html.BeginForm("Save", "Menu", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mainR">
            <div class="form-group input-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group input-group">
                @Html.LabelFor(model => model.Type)
                @Html.TextBoxFor(model => model.Type)
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
            <div class="form-group input-group">
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" style="width: 100%;" />
            </div>
            <button type="submit" style="width:100%" class="btn btn-primary">Save</button>
        </div>


    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>