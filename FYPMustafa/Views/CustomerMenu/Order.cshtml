@model FYPMustafa.Models.Order

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/Restaurant.css" rel="stylesheet" />
<div class="container" style="min-height:500px;">
    <h2>Order Food</h2>


    @using (Html.BeginForm("Save", "CustomerMenu", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ItemName)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mainR">
            <h4 style="text-align:center; color:black;">Order: <b>@Model.ItemName</b></h4>
            <div class="form-group input-group">
                @Html.LabelFor(model => model.TableNumber)
                @Html.TextBoxFor(model => model.TableNumber)
                @Html.ValidationMessageFor(model => model.TableNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group input-group">
                @Html.LabelFor(model => model.Quantity)
                @Html.TextBoxFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
            <div class="form-group input-group">
                @Html.LabelFor(model => model.SpecialRequirments)
                @Html.TextAreaFor(model => model.SpecialRequirments)
                @Html.ValidationMessageFor(model => model.SpecialRequirments, "", new { @class = "text-danger" })
            </div>
            <button type="submit" style="width:100%" class="btn btn-primary">Save</button>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>