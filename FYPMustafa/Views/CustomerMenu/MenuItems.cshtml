@model IEnumerable<FYPMustafa.Models.MenuItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/cMenu.css" rel="stylesheet" />
<div class="container" style="padding-bottom:100px;">
    <h1 style="text-align:center;">Restaurant Name</h1>
    <hr />

    <div class="row">
        @foreach (var item in Model)
        {
           
        <figure class="snip1573">
            <h2 style="color:white; margin-top:10px !important;">@item.Name</h2>
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample89.jpg" alt="sample89" />
            <figcaption>
                <h3>View Item</h3>
            </figcaption>
            <a href="@Url.Action("ItemDetail","CustomerMenu", new { id = item.ItemID })"></a>
            <h4 style="">RM @item.Price</h4>
        </figure>
        }
    </div>

</div>



