@model FYPMustafa.Models.Restaurant

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Restaurant.css" rel="stylesheet" />
<h2 style="font-weight: 600; margin-top:30px;">Restaurant</h2>


@using (Html.BeginForm("Save", "Restaurant"))
{


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="mainR" style="padding-bottom:50px;">
    <div class="form-group input-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group input-group">
        @Html.LabelFor(model => model.Street)
        @Html.TextBoxFor(model => model.Street)
        @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
    </div>

    <div class="form-group input-group">
        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City)
        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
    </div>


    <div class="form-group input-group">
        @Html.LabelFor(model => model.Country)
        @Html.TextBoxFor(model => model.Country)
        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
    </div>


    <div class="form-group input-group">
        @Html.LabelFor(model => model.ZipCode)
        @Html.TextBoxFor(model => model.ZipCode)
        @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
    </div>


    @Html.AntiForgeryToken()
    <button type="submit" style="width:100%" class="btn btn-primary">Save</button>
    </div>


        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
